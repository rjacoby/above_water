.container
%h2 Periscope Streams for #{link_to "@#{@twitter_id}", "https://twitter.com/#{@twitter_id}"}
.row
  .col-md-6
    - if @embeds.blank?
      .none-found
        No recent broadcasts found.
    - else
      .tweet-list
      - @embeds.each do |k,v|
        .tweet{data: {tweet_id: k}}
          = raw(v.html)

